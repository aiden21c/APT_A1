{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build-helloworld",
        "command": "/usr/bin/g++",
        "args": [
            "-g",
            "${workspaceFolder}/helloworld.cpp",
            "-o",
            "${workspaceFolder}/helloworld"
        ],
        "options": {
            "cwd": "/usr/bin"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
    ]
  }